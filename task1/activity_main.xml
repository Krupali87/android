<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    android:layout_weight="1"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000">


        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B91E1A1A"
            android:paddingRight="200dp"
            android:text=""
            />

        <Button
            android:id="@+id/b2"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/b1"
            android:layout_toRightOf="@id/b1"
            android:backgroundTint="#B91E1A1A"
            android:text="DELETE" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/b1"
            android:layout_marginTop="-9dp"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:text="7"
            android:textSize="30dp"
            android:backgroundTint="#65272424"
            />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="39dp"
            android:layout_toRightOf="@id/b3"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="39dp"
            android:layout_toRightOf="@id/b4"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="39dp"
            android:layout_toRightOf="@id/b5"
            android:backgroundTint="#941E1A1A"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="/"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/b3"
            android:layout_marginTop="-9dp"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/b7"
            android:layout_below="@id/b4"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/b8"
            android:layout_below="@id/b4"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/b9"
            android:layout_below="@id/b4"
            android:backgroundTint="#941E1A1A"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="*"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_below="@id/b7"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_below="@id/b7"
            android:layout_toRightOf="@id/b11"
            android:layout_marginLeft="4dp"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_below="@id/b7"
            android:layout_toRightOf="@id/b12"
            android:layout_marginLeft="4dp"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_below="@id/b7"
            android:layout_toRightOf="@id/b13"
            android:layout_marginLeft="4dp"
            android:backgroundTint="#941E1A1A"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="-"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_below="@id/b11"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="."
            android:textSize="30dp" />

        <Button
            android:id="@+id/b16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/b15"
            android:layout_marginLeft="4dp"
            android:layout_below="@id/b11"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="0"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/b16"
            android:layout_marginLeft="4dp"
            android:layout_below="@id/b11"
            android:backgroundTint="#65272424"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="="
            android:textSize="30dp" />

        <Button
            android:id="@+id/b18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/b17"
            android:layout_marginLeft="4dp"
            android:layout_below="@id/b11"
            android:backgroundTint="#941E1A1A"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="+"
            android:textSize="30dp" />




    </RelativeLayout>




</LinearLayout>






