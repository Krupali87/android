<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:padding="25dp"
    android:gravity="center"
    android:background="#272525"
    tools:context=".Activity.loginActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hey_there"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edtshape"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/baseline_phone_24"
        android:padding="15dp"
        android:hint="@string/phone"
        android:drawablePadding="5dp"/>

    <EditText
        android:id="@+id/edtpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edtshape"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
        app:passwordToggleEnabled="true"
        android:padding="14dp"
        android:hint="@string/password"
        android:drawablePadding="5dp"
        android:inputType="numberPassword"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_your_password"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/btn_shape"
        android:layout_marginTop="25dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/or_continue_with"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape2"
        android:drawableStart="@drawable/icons8_facebook"
        android:text="@string/facebook"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/google"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape2"
            android:drawableStart="@drawable/icons8_google"
            android:text="@string/google"
            android:layout_marginLeft="25dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"/>



    </LinearLayout>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_an_account_yet_register"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>



</LinearLayout>