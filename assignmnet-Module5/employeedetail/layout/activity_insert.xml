<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ProjectInsertActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Employee Project Detail"
       android:textSize="20sp"
       android:gravity="center"
       android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutedtproject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Project Name"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="#B7000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtprojectname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutprojectdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Project Detail"
        android:layout_marginTop="10dp"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="#B7000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtprojectdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SAVE"/>






</LinearLayout>