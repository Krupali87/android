<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvTaskNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="taskname"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/tvTaskDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="task_description"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/tvTaskDateTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="task_due_date"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/tvTaskPriorityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="task_priority"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTaskPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/tvTaskStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="task_status"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
